{
  "name": "token-verify",
  "version": "1.0.0",
  "private": true,
  "description": "Token Identity Verification - A reputation/attestation layer for disambiguating tokens",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "db:generate": "cd packages/shared && npx prisma generate",
    "db:migrate": "cd packages/shared && npx prisma migrate dev",
    "db:push": "cd packages/shared && npx prisma db push",
    "db:studio": "cd packages/shared && npx prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0",
  "optionalDependencies": {
    "@esbuild/linux-x64": "^0.27.3"
  }
}
